{
  "compilerOptions": {
    "target": "es2016",                    
    "module": "commonjs",                       
    "allowJs": true,                          
    "checkJs": false,                          
    "jsx": "react-jsx",                         
    "esModuleInterop": true,                    
    "forceConsistentCasingInFileNames": true,  
    "strict": true,                             
    "skipLibCheck": true,                       
    "rootDir": "./src",                         
    "outDir": "./build"                        
  },
  "include": [
    "src/**/*"                                  
  ],
  "exclude": [
    "node_modules",
    "build",
    "frontend/postcss.config.js",
    "frontend/tailwind.config.js"
  ]
}
